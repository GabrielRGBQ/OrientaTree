<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OnGoingActivity"
    android:id="@+id/onGoing_linearLayout">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/onGoing_toolbar"
            android:layout_width="match_parent"
            app:title="Actividad en curso"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/black">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/onGoing_imageView"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:scaleType="centerCrop"
        android:alpha="0.85"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/onGoing_template_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Template"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/onGoing_beacons_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 balizas"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_gravity="right"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/onGoing_type_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overline"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"/>

        <TextView
            android:id="@+id/onGoing_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines = "1"
            android:ellipsize = "end"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            />

        <TextView
            android:id="@+id/onGoing_location_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Campo Grande, Valladolid"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <TextView
            android:id="@+id/onGoing_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:scrollbars = "vertical"
            android:layout_marginTop="10dp"
            android:text="Lorem ipsum dolor sit amet consectetur adipiscing elit malesuada ut platea, felis
            Lorem ipsum dolor sit amet consectetur adipiscing elit malesuada ut platea, felis"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/onGoing_map_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Ver mapa"
                android:enabled="false"
                android:textAllCaps="true"
                style="?attr/borderlessButtonStyle"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/onGoing_norms_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver normas"
                android:textAllCaps="true"
                style="?attr/borderlessButtonStyle"
                />
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/onGoing_map_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="invisible"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/onGoing_subtitle_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Actividad en curso"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

                <TextView
                    android:id="@+id/onGoing_start_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Comienzo: 12:00"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

                <TextView
                    android:id="@+id/onGoing_end_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Fin: 16:30"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/onGoing_state_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Esperando salida"
                    android:layout_gravity="right"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

                <TextView
                    android:id="@+id/onGoing_timer_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="00:00:00"
                    android:layout_gravity="right"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/onGoing_start_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Comenzar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>